# $Id$

exec=/usr/bin/prometheus
config=/etc/prometheus.yml

depend() {
	need net
}

start() {
	ebegin "Starting Prometheus Server"
	start-stop-daemon --start --quiet --exec ${exec} --\
		-config.file=${config}
	eend $?
}

stop() {
	ebegin "Starting Prometheus Server"
	start-stop-daemon --stop --quiet --exec ${exec}
	eend $?
}
